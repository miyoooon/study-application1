<div class="list-wrap">
<% @lists.each do |list| %>
  <div class="list-box">
    <% if list.image.attached? %>
      <%= image_tag list.image, size: "200×200" %>
    <% else %>
      <%= image_tag 'no_image (1)', size: "200×200" %>
    <% end %>
    <div class="list-comment">
      <span class="list-body"><%= list.body %></span>
      <span class="list-title"><%= list.title %></span>
    </div>
  </div>
<% end %>
</div>